                <div class="row">
                    <div class="col-md-6">
                        <div class="card">
                            <form class="form-horizontal" action="/blog/update/<%= blog._id %>" method="post" enctype="multipart/form-data">
                                <div class="card-body">
                                    <h4 class="card-title">Personal Info</h4>
                                    <div class="form-group row">
                                        <input type="hidden" class="form-control" id="userId" name="userId" value="<%= user.id %>" />
